            {%- if section.settings.image_3.width >= 535 -%}{{ section.settings.image_3 | img_url: '535x' }} 535w,{%- endif -%}
            {%- if section.settings.image_3.width >= 720 -%}{{ section.settings.image_3 | img_url: '720x' }} 720w,{%- endif -%}
            {%- if section.settings.image_3.width >= 940 -%}{{ section.settings.image_3 | img_url: '940x' }} 940w,{%- endif -%}
            {%- if section.settings.image_3.width >= 1070 -%}{{ section.settings.image_3 | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ section.settings.image_3 | img_url: '525x' }}"
            class="image-down__{{section.id}}"
            sizes="(min-width: 1100px) 1100px, (min-width: 750px) 750px"
            alt="{{ section.settings.image_3.alt | escape }}"
            loading="lazy"
