    </div>
  </div>
</div>

{% schema %}

{
    "name": "Dingo-Gallery-7",
    "tag": "section",
    "class": "spaced-section spaced-section--full-width",
    "settings": [
        {
            "type": "header",
            "content": "Main settings"
        },{
            "type": "image_picker",
            "id": "image_1",
            "label": "1 image"
        }, {
            "type": "image_picker",
            "id": "image_2",
            "label": "2 image"
        }, {
            "type": "image_picker",
            "id": "image_3",
            "label": "3 image"
        },{
            "type": "image_picker",
            "id": "image_4",
            "label": "4 image"
        }, {
            "type": "header",
            "content": "Layout settings"
        }, {
            "type": "color",
            "id": "section_background_color",
            "label": "Section background color",
            "default": "#ffffff"
        }, {
            "type": "range",
            "id": "section_padding_top",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Section top padding",
            "default": 20
        }, {
            "type": "range",
            "id": "section_padding_bottom",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Section bottom padding",
            "default": 20
        }, {
            "type": "range",
            "id": "section_padding_top_mobile",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Section top padding (mobile)",
            "default": 20
        }, {
            "type": "range",
            "id": "section_padding_bottom_mobile",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px",
            "label": "Section bottom padding (mobile)",
            "default": 20
        }, {
            "type": "header",
            "content": "Custom settings"
        }, {
            "type": "textarea",
            "id": "custom_css",
            "label": "Custom CSS"
        }
    ],
    "presets": [
        {
            "name": "Dingo-Gallery-7"
        }
    ]
}

{% endschema %}
