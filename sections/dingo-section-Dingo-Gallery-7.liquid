{%- style -%}

.dg-container-fluid__{{section.id}}{
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

.dg-row__{{section.id}}{
    --bs-gutter-x: 15px;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: calc(var(--bs-gutter-y) * -1);
    margin-right: calc(var(--bs-gutter-x) * -0.5);
    margin-left: calc(var(--bs-gutter-x) * -0.5);
}
.dg-row__{{section.id}}> * {
    box-sizing: border-box;
    flex-shrink: 0;
    width: 100%;
    max-width: 100%;
    padding-right: calc(var(--bs-gutter-x) * 0.5);
    padding-left: calc(var(--bs-gutter-x) * 0.5);
    margin-top: var(--bs-gutter-y);
}

.dg-justify-content__{{section.id}}{
    justify-content: center;
}

@media(min-width: 576px) {
    .dg-col-sm-4__{{section.id}}{
        flex: 0 0 auto;
        width: 33.33333333%;
    }

    .dg-col-sm-8__{{section.id}}{
        flex: 0 0 auto;
        width: 66.66666667%;
    }
}

.gallery-section__{{section.id}}{
    padding-top: {{section.settings.section_padding_top}}px;
    padding-bottom: {{section.settings.section_padding_bottom}}px;
    {% if section.settings.is_theme_font_style_used == true %}
        font-family: {{section.settings.font_style.family}};
    {% endif %}
    color: {{section.settings.text_color}};
    background-color: {{section.settings.section_background_color}};
}

.image-column-up__{{section.id}} {
	margin-bottom: 15px;
}

.image-up__{{section.id}}{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.image-down__{{section.id}} {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

@media(max-width: 576px) {
    .gallery-section__{{section.id}}{
        padding-top: {{section.settings.section_padding_top_mobile}}px;
        padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
    }

	.image-up__{{section.id}}{
		height: auto;
	}
	
	.image-down__{{section.id}} {
		height: auto;
	}

	.image-column-up__{{section.id}} {
		margin-bottom: 0px;
	}
}

{%- endstyle -%}

{%-style-%}

{{section.settings.custom_css}}

{%-endstyle-%}

<div class="gallery-section__{{section.id}}">
  <div class="dg-container-fluid__{{section.id}}">
    <div class="dg-row__{{section.id}} dg-justify-content__{{section.id}} image-column-up__{{section.id}}">
      <div class="dg-col-sm-8__{{section.id}}">
