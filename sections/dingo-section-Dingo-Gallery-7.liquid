            {%- if section.settings.image_1.width >= 1070 -%}{{ section.settings.image_1 | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ section.settings.image_1 | img_url: '525x' }}"
            class="image-up__{{section.id}}"
            sizes="(min-width: 1100px) 1100px, (min-width: 750px) 750px"
            alt="{{ section.settings.image_1.alt | escape }}"
            loading="lazy"
          >
        {% endif %}
