            {%- if section.settings.image_4.width >= 360 -%}{{ section.settings.image_4 | img_url: '360x' }} 360w,{%- endif -%}
            {%- if section.settings.image_4.width >= 535 -%}{{ section.settings.image_4 | img_url: '535x' }} 535w,{%- endif -%}
            {%- if section.settings.image_4.width >= 720 -%}{{ section.settings.image_4 | img_url: '720x' }} 720w,{%- endif -%}
            {%- if section.settings.image_4.width >= 940 -%}{{ section.settings.image_4 | img_url: '940x' }} 940w,{%- endif -%}
            {%- if section.settings.image_4.width >= 1070 -%}{{ section.settings.image_4 | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ section.settings.image_4 | img_url: '525x' }}"
            class="image-down__{{section.id}}"
