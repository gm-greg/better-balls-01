{% comment %}
    Grid system{% endcomment %}
 .dg-container__{{section.id}}{
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

@media(min-width: 576px) {
    .dg-container__{{section.id}}{
        max-width: 540px;
    }
}

@media(min-width: 768px) {
    .dg-container__{{section.id}}{
        max-width: 720px;
    }
}

@media(min-width: 992px) {
    .dg-container__{{section.id}}{
        max-width: 960px;
    }
}

@media(min-width: 1200px) {
    .dg-container__{{section.id}}{
        max-width: 1140px;
    }
}

@media(min-width: 1400px) {
    .dg-container__{{section.id}}{
        max-width: 1320px;
    }
}
.dg-row__{{section.id}}{
    --bs-gutter-x: 1.5rem;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: calc(var(--bs-gutter-y) * -1);
    margin-right: calc(var(--bs-gutter-x) * -0.5);
    margin-left: calc(var(--bs-gutter-x) * -0.5);
}
.dg-row__{{section.id}}> * {
    box-sizing: border-box;
    flex-shrink: 0;
    width: 100%;
    max-width: 100%;
    padding-right: calc(var(--bs-gutter-x) * 0.5);
    padding-left: calc(var(--bs-gutter-x) * 0.5);
    margin-top: var(--bs-gutter-y);
}

@media(min-width: 576px) {
    .dg-col-sm-2__{{section.id}}{
        flex: 0 0 auto;
        width: 16.66666667%;
    }

    .dg-col-sm-4__{{section.id}}{
        flex: 0 0 auto;
        width: 33.33333333%;
    }

    .dg-col-sm-6__{{section.id}}{
        flex: 0 0 auto;
        width: 50%;
    }
}

.dg-justify-content__{{section.id}}{
    justify-content: center;
}
{% comment %}
    End grid system{% endcomment %}
 .services-section__{{section.id}}{
    padding-top: {{section.settings.section_padding_top}}px;
    padding-bottom: {{section.settings.section_padding_bottom}}px;
    {% if section.settings.is_theme_font_style_used == true %}
        font-family: {{section.settings.font_style.family}};
    {% endif %}
    color: {{section.settings.text_color}};
    background-color: {{section.settings.section_background_color}};
}

.title__{{section.id}}{
    margin-bottom: {{section.settings.title_margin_bottom}}px;
    text-align: center;
    font-size: {{section.settings.title_font_size}}px;
    font-weight: {{section.settings.title_font_weight}};
    font-style: {{section.settings.title_font_style}};
}

.description__{{section.id}}{
    margin-bottom: {{section.settings.description_margin_bottom}}px;
    text-align: center;
    font-size: {{section.settings.description_font_size}}px;
}

.description__{{section.id}} > p {
    margin: 0;
    color: {{section.settings.text_color}};
}

.service-title__{{section.id}}{
    margin-bottom: {{section.settings.service_title_margin_bottom}}px;
    font-size: {{section.settings.service_title_font_size}}px;
    font-weight: {{section.settings.service_title_font_weight}};
    font-style: {{section.settings.service_title_font_style}};
}

.service-description__{{section.id}}{
    font-size: {{section.settings.service_description_font_size}}px;
}

.service-description__{{section.id}} > p {
    margin: 0;
    color: {{section.settings.text_color}};
}

.image-column__{{section.id}}{
    padding: 0;
}

.image__{{section.id}}{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.service-text-column__{{section.id}}{
    background-color: {{section.settings.text_background_color}};
    padding: 50px;
}


@media(max-width: 576px) {
    .services-section__{{section.id}}{
        padding-top: {{section.settings.section_padding_top_mobile}}px;
        padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
    }

    .title__{{section.id}}{
        font-size: {{section.settings.title_font_size_mobile}}px;
    }

    .description__{{section.id}}{
        font-size: {{section.settings.description_font_size_mobile}}px;
    }

    .service-title__{{section.id}}{
        font-size: {{section.settings.service_title_font_size_mobile}}px;
    }

    .service-description__{{section.id}}{
        font-size: {{section.settings.service_description_font_size_mobile}}px;
    }
}

