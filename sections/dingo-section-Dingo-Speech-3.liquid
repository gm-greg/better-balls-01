{%- style -%}

{% if section.settings.is_theme_font_style_used == true %}
    {{section.settings.font_style | font_face}}{% endif %}

{% comment %}
    Grid system{% endcomment %}
 .dg-container__{{section.id}}{
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

@media(min-width: 576px) {
    .dg-container__{{section.id}}{
        max-width: 540px;
    }
}

@media(min-width: 768px) {
    .dg-container__{{section.id}}{
        max-width: 720px;
    }
}

@media(min-width: 992px) {
    .dg-container__{{section.id}}{
        max-width: 960px;
    }
}

@media(min-width: 1200px) {
    .dg-container__{{section.id}}{
        max-width: 1140px;
    }
}

@media(min-width: 1400px) {
    .dg-container__{{section.id}}{
        max-width: 1320px;
    }
}
.dg-row__{{section.id}}{
    --bs-gutter-x: 1.5rem;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: calc(var(--bs-gutter-y) * -1);
    margin-right: calc(var(--bs-gutter-x) * -0.5);
    margin-left: calc(var(--bs-gutter-x) * -0.5);
}
.dg-row__{{section.id}}> * {
    box-sizing: border-box;
    flex-shrink: 0;
    width: 100%;
    max-width: 100%;
    padding-right: calc(var(--bs-gutter-x) * 0.5);
    padding-left: calc(var(--bs-gutter-x) * 0.5);
    margin-top: var(--bs-gutter-y);
}

@media(min-width: 576px) {
    .dg-col-sm-3__{{section.id}}{
        flex: 0 0 auto;
        width: 25%;
    }
}

.dg-justify-content__{{section.id}}{
    justify-content: center;
}
{% comment %}
    End grid system{% endcomment %}
 .speech-section__{{section.id}}{
    padding-top: {{section.settings.section_padding_top}}px;
    padding-bottom: {{section.settings.section_padding_bottom}}px;
    {% if section.settings.is_theme_font_style_used == true %}
        font-family: {{section.settings.font_style.family}};
    {% endif %}
    color: {{section.settings.text_color}};
    background-color: {{section.settings.section_background_color}};
}

.image__{{section.id}}{
    object-fit: cover;
    border-radius: 40px;
    position: absolute;
    left: 0;
    right: 0;
    bottom: -40px;
    margin-left: auto;
    margin-right: auto;
}

.person-container__{{section.id}}{
    position: absolute;
    left: 0;
    right: 0;
    bottom: -92px;
}

.speech__{{section.id}}{
    font-size: {{section.settings.speech_font_size}}px;
}

.column__{{section.id}}{
    margin-right: 20px;
    margin-left: 20px;
    position: relative;
    padding: 30px 30px 60px;
    background-color: #F7F7F7;
    text-align: center;
}

.name__{{section.id}}{
    position: absolute;
    bottom: -75px;
    left: 0;
    right: 0;
    font-size: {{section.settings.name_font_size}}px;
    font-weight: {{section.settings.name_font_weight}};
    font-style: {{section.settings.name_font_style}};
}

.role__{{section.id}}{
    position: absolute;
    bottom: -95px;
    left: 0;
    right: 0;
    font-size: {{section.settings.role_font_size}}px;
    font-weight: {{section.settings.role_font_weight}};
    font-style: {{section.settings.role_font_style}};
}

.speech__{{section.id}} > p {
    margin: 0;
    color: {{section.settings.text_color}};
}

@media(max-width: 576px) {
    .speech-section__{{section.id}}{
        padding-top: {{section.settings.section_padding_top_mobile}}px;
        padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
    }

    .column__{{section.id}}{
        margin-bottom: 120px;
    }

    .row__{{section.id}}{
        padding-left: 20px;
        padding-right: 20px;
    }

    .speech__{{section.id}}{
        margin-bottom: 50px;
        font-size: {{section.settings.speech_font_size_mobile}}px;
    }
}

{%- endstyle -%}

{%-style-%}

{{section.settings.custom_css}}

{%-endstyle-%}

