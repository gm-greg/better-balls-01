{% schema %}

{
    "name": "Dingo-Speech-3",
    "tag": "section",
    "class": "spaced-section spaced-section--full-width",
    "settings": [
        {
            "type": "header",
            "content": "1 Person main settings"
        }, {
            "type": "richtext",
            "id": "speech_text_1",
            "default": "<p>\"Fashion is like eating, you shouldn't stick to the same menu\".</p>",
            "label": "1 Speech text"
        }, {
            "type": "image_picker",
            "id": "image_1",
            "label": "1 Person image"
        }, {
            "type": "text",
            "id": "name_text_1",
            "default": "Peter Bork",
            "label": "1 Person name"
        }, {
            "type": "text",
            "id": "role_text_1",
            "default": "Photographer",
            "label": "1 Person description"
        }, {
            "type": "header",
            "content": "2 Person main settings"
        }, {
            "type": "richtext",
            "id": "speech_text_2",
            "default": "<p>\"Fashion is about dressing according to what’s fashionable. Style is more about being yourself.\"</p>",
            "label": "2 Speech text"
        }, {
            "type": "image_picker",
            "id": "image_2",
            "label": "2 Person image"
        }, {
            "type": "text",
            "id": "name_text_2",
            "default": "Katrine Smith",
            "label": "2 Person name"
        }, {
            "type": "text",
            "id": "role_text_2",
            "default": "Model",
            "label": "2 Person description"
        }, {
            "type": "header",
            "content": "3 Person main settings"
        }, {
            "type": "richtext",
            "id": "speech_text_3",
            "default": "<p>\"To wear dreams on one's feet is to begin to give a reality to one's dreams.\"</p>",
            "label": "3 Speech text"
        }, {
            "type": "image_picker",
            "id": "image_3",
            "label": "3 Person image"
        }, {
            "type": "text",
            "id": "name_text_3",
            "default": "Jennifer Kelly",
            "label": "3 Person name"
        }, {
            "type": "text",
            "id": "role_text_3",
            "default": "Hairdresser",
            "label": "3 Person description"
        }, 
        {
            "type": "header",
            "content": "Common text settings"
        }, {
