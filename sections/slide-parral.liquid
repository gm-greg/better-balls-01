<section class="section {{ section.settings.css_class }} is-width-wide" id="section-{{ section.id }}">
<div class="lunatemplates-parallax lunatemplates-parallax--{{ section.id }} {% if section.settings.parallax_on %}LT-parallax-on {% endif %}">
<div class="lunatemplates-parallax-text-container {% if section.settings.image_height == '50' %}parallax-small {% endif %}{% if section.settings.border_radius == 'rounded' %}parallax-round{% endif %}">
{% if section.settings.title != blank %}
<{{ section.settings.heading_tag }}>{{ section.settings.title }}</{{ section.settings.heading_tag }}>
{% endif %}
{% if section.settings.content != blank %}
{{ section.settings.content }}
{% endif %}
{% if section.settings.link_text != blank %}
<div class="luna-btn-container">
<a href="{{ section.settings.link_url }}" class="luna-btn">{{ section.settings.link_text }}</a>
</div>
{% endif %}
</div>
</div>
</section>
{%- style -%}

.lunatemplates-parallax--{{ section.id }} {
	height: {{ section.settings.image_height }}vh;
background-position: {{ section.settings.image_position }};
}

.lunatemplates-parallax--{{ section.id }} {{ section.settings.heading_tag }}, .lunatemplates-parallax--{{ section.id }} p, .lunatemplates-parallax--{{ section.id }} a {
 color: {{ section.settings.color_text }} !important;	
}

.lunatemplates-parallax--{{ section.id }} {{ section.settings.heading_tag }} {
font-size: {{ section.settings.font_size_desktop }}px;
}

.lunatemplates-parallax--{{ section.id }} {
background-image: url('{{ section.settings.image_bg | img_url: '2000x' }}');
}

.lunatemplates-parallax--{{ section.id }} .lunatemplates-parallax-text-container {
background-color: {{ section.settings.color_bg	}};
}
#section-{{ section.id }} .luna-btn {
 padding: 0.5rem 2rem;
margin-top: 20px;
background-color: {{ section.settings.color_btn_fill }};
 border: 1px solid {{ section.settings.color_btn_border }};
 color: {{ section.settings.color_btn_text }} !important;
font-size: {{ section.settings.font_size_btn_desktop }}px;
 transition: background-color 0.5s;
text-decoration: none;
}
#section-{{ section.id }} .luna-btn:hover {
background-color: {{ section.settings.color_btn_fill_hover }};
 border: 1px solid {{ section.settings.color_btn_border_hover }};
 color: {{ section.settings.color_btn_text_hover }} !important;
 transition: background-color 0.5s;
}
{% if section.settings.btn_shape == 'oval' %}
#section-{{ section.id }} .luna-btn {
 padding: 20px 40px;
border-radius: 50%;
}
{% endif %}
{% if section.settings.btn_shape == 'rounded' %}
#section-{{ section.id }} .luna-btn {
border-radius: 50px;
}
{% endif %}

.luna-btn-container {
	padding: 20px 0;
}

.lunatemplates-parallax {{ section.settings.heading_tag }} {
margin-block-start: 0em;
margin-block-end: 0em;
margin-bottom: 10px;
}
@media (min-width: 750px) and (max-width: 1200px) {
	.lunatemplates-parallax--{{ section.id }} {{ section.settings.heading_tag }} {
font-size: calc(({{ section.settings.font_size_desktop }}px + {{ section.settings.font_size_mobile }}px)*0.5) !important; 
}
}
@media screen and (max-width: 749px) {
 .lunatemplates-parallax--{{ section.id }} {{ section.settings.heading_tag }} {
font-size: {{ section.settings.font_size_mobile }}px;
}
#section-{{ section.id }} .luna-btn {
font-size: {{ section.settings.font_size_btn_mobile }}px;
}
}
{{ section.settings.custom_css }}
{%- endstyle -%}
<style>
.lunatemplates-parallax {
background-size: cover;
 position: relative;
min-height: 320px;
}

.LT-parallax-on {
background-attachment: fixed;
}

.lunatemplates-parallax {{ section.settings.heading_tag }}, .lunatemplates-parallax p, .lunatemplates-parallax .luna-btn-container {
text-align: center;
}

.lunatemplates-parallax-text-container {
 margin: 0;
 position: absolute;
 top: 50%;
 left: 50%;
-ms-transform: translate(-50%, -50%);
 transform: translate(-50%, -50%);
 padding: 50px;
}

.lunatemplates-parallax-text-container.parallax-round {
border-radius: 30px;
}
@media only screen and (hover: none) and (pointer: coarse){
	.LT-parallax-on {
background-attachment: scroll;
}
}
@media only screen and (max-width: 749px) {
	.lunatemplates-parallax-text-container {
 padding: 20px;
 width: 70%;
}
}
</style>
